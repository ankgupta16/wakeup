<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" >

			<CheckBox android:id="@+id/edit_settings_sound_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/edit_settings_sound" />

			<CheckBox android:id="@+id/edit_settings_vibrate_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/edit_settings_vibrate" />

			<CheckBox android:id="@+id/edit_settings_led_checkbox"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="right|center_vertical"
				android:text="@string/edit_settings_led" />

		</LinearLayout>

    </ScrollView>

</LinearLayout>
